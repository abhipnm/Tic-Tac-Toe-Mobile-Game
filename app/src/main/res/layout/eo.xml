            android:id="@+id/b1"
            android:textColor="#000000"
            android:background="@drawable/select"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="15"
            android:textSize="75dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="match_parent" />
        <Button
            android:id="@+id/b2"
            android:textSize="75dp"
            android:textColor="#000000"
            android:background="@drawable/select"
